@model UpdateProjectDto

@{
    ViewData["Title"] = "UpdateProject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1>Projeyi Güncelle</h1>

<form method="post">

    <input type="hidden" asp-for="Id" />

    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span class="text-danger" asp-validation-for="Title"></span>

    <label>Görsel Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <span class="text-danger" asp-validation-for="ImageUrl"></span>

    <label>Kategori</label>
    <select type="text" asp-for="CategoryId" class="form-control" asp-items="@ViewBag.categories">
        <option selected>Kategori Seçiniz</option>
    </select>
    <span class="text-danger" asp-validation-for="CategoryId"></span>

    <button type="submit">kaydet</button>

</form>
