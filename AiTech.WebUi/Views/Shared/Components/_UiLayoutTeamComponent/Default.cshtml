@model List<ResultTeamDto>

@*
    Ui Layout Team Component
*@

<div class="container-fluid bg-light py-5" id="Team">
    <div class="container py-5">
        <div class="row g-5 align-items-center">
            <div class="col-lg-5 wow fadeIn" data-wow-delay="0.1s">
                <div class="btn btn-sm border rounded-pill text-primary px-3 mb-3">Ekibimiz</div>
                <h1 class="mb-4">Deneyimli Ekip Üyelerimizle Tanışın</h1>
                <p class="mb-4">
                    Alanında uzman mühendisler, veri bilimcileri ve stratejistlerden oluşan ekibimiz; yenilikçi yapay zekâ çözümleriyle iş süreçlerinizi geleceğe taşıyor.
                    Her projede veri odaklı yaklaşımımız ve sektör deneyimimizle, ölçülebilir ve sürdürülebilir değer üretiyoruz.
                    İş ortaklarımızın ihtiyaçlarını derinlemesine anlayarak, ölçeklenebilir ve güvenilir teknolojiler geliştiriyoruz.
                </p>
                <a class="btn btn-primary rounded-pill px-4" href="">Read More</a>
            </div>
            <div class="col-lg-7">
                <div class="row g-4">
                    @foreach(var item in Model)
                    {
                        <div class="col-md-6">
                            <div class="row g-4">
                                <div class="col-12 wow fadeIn" data-wow-delay="0.1s">
                                    <div class="team-item bg-white text-center rounded p-4 pt-0">
                                        <img class="img-fluid rounded-circle p-4" src="@item.ImageUrl" alt="">
                                        <h5 class="mb-0">@item.NameSurname</h5>
                                        <small>@item.Title</small>
                                        <div class="d-flex justify-content-center mt-3">
                                            <a class="btn btn-square btn-primary m-1" href="@item.FacebookUrl">
                                                <i class="fab fa-facebook-f"></i>
                                            </a>
                                            <a class="btn btn-square btn-primary m-1" href="@item.TwitterUrl">
                                                <i class="fab fa-twitter"></i>
                                            </a>
                                            <a class="btn btn-square btn-primary m-1" href="@item.InstagramUrl">
                                                <i class="fab fa-instagram"></i>
                                            </a>
                                            <a class="btn btn-square btn-primary m-1" href="@item.LinkedinUrl">
                                                <i class="fab fa-linkedin-in"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>