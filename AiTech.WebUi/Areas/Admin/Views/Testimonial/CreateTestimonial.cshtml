@model CreateTestimonialDto

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-warning text-dark text-center">
            <h4 class="mb-0 fw-semibold">✏️ Yeni Referans Oluştur</h4>
        </div>

        <div class="card-body p-4">
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold">Ad Soyad</label>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Ad Soyad" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-semibold">Ünvan</label>
                    <input type="text" asp-for="Title" class="form-control" placeholder="Ünvan" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Comment" class="form-label fw-semibold">Yorum</label>
                    <textarea asp-for="Comment" class="form-control" placeholder="Yorum yazın"></textarea>
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label fw-semibold">Fotoğraf</label>
                    <input type="file" asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary px-4 fw-semibold">
                        <i class="fa fa-plus-circle me-1"></i> Oluştur
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
