@model List<ResultSocialDto>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">

        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0 fw-semibold">📋 Sosyal Medya Listesi</h4>
            <a href="/Admin/Social/CreateSocial" class="btn btn-light btn-sm fw-semibold">
                <i class="fa fa-plus-circle me-1"></i> Yeni Sosyal Medya Ekle
            </a>
        </div>

        <div class="card-body p-4">
            @if (Model != null && Model.Any())
            {
                <table class="table table-striped table-bordered align-middle text-center">
                    <thead class="table-primary">
                        <tr>
                            <th>#</th>
                            <th>Ad</th>
                            <th>Icon</th>
                            <th>URL</th>
                            <th style="width:200px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.Name</td>
                                <td>
                                    <i class="@item.Icon"></i> <br />
                                    <small>@item.Icon</small>
                                </td>
                                <td>
                                    <a href="@item.Url" target="_blank">@item.Url</a>
                                </td>
                                <td>
                                    <a href="/Admin/Social/UpdateSocial/@item.Id" class="btn btn-warning btn-sm me-2">
                                        <i class="fa fa-edit"></i> Güncelle
                                    </a>
                                    <a href="/Admin/Social/DeleteSocial/@item.Id"
                                       class="btn btn-danger btn-sm"
                                       onclick="return confirm('Bu kaydı silmek istiyor musunuz?');">
                                        <i class="fa fa-trash"></i> Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info text-center">
                    📭 Henüz herhangi bir sosyal medya eklenmemiş.
                </div>
            }
        </div>
    </div>
</div>
