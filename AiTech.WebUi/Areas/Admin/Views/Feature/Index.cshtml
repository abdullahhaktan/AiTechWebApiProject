@model List<ResultFeatureDto>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card shadow border-0">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">📋 Özellikler</h5>
        <a href="/Admin/Feature/CreateFeature" class="btn btn-light btn-sm">
            <i class="fa fa-plus"></i> Yeni Özellik
        </a>
    </div>

    <div class="card-body">
        <table class="table table-bordered table-striped text-center align-middle">
            <thead class="table-primary">
                <tr>
                    <th>#</th>
                    <th>Başlık</th>
                    <th>Icon</th>
                    <th>Açıklama</th>
                    <th style="width:180px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@item.Title</td>
                        <td>
                            <i class="@item.Icon"></i><br />
                            <small>@item.Icon</small>
                        </td>
                        <td>@item.Description</td>
                        <td>
                            <a href="/Admin/Feature/UpdateFeature/@item.Id" class="btn btn-warning btn-sm me-1">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="/Admin/Feature/DeleteFeature/@item.Id"
                               class="btn btn-danger btn-sm"
                               onclick="return confirm('Silmek istiyor musunuz?');">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
