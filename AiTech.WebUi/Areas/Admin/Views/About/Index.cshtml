@model UpdateAboutDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-warning text-dark text-center">
            <h4 class="mb-0 fw-semibold">✏️ Hakkımda </h4>
        </div>

        <div class="card-body p-4">
            <form method="post">

                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-semibold">Başlık Adı</label>
                    <input type="text" asp-for="Title" class="form-control" placeholder="Hakkımda Başlık Güncelle" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label fw-semibold">Hakkımda Görsel Url</label>
                    <input type="text" asp-for="ImageUrl" class="form-control" placeholder="Hakkımda Görsel Url Düzenle" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-semibold">Açıklama</label>
                    <textarea asp-for="Description" rows="15" cols="15" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary px-4 fw-semibold">
                        <i class="fa fa-refresh me-1"></i> Güncelle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>