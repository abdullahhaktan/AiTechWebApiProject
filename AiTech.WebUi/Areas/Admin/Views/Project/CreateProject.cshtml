@model CreateProjectDto

@{
    ViewData["Title"] = "CreateProject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-warning text-dark text-center">
            <h4 class="mb-0 fw-semibold">✏️ Yeni Proje Oluştur</h4>
        </div>

        <div class="card-body p-4">
            <form method="post">
  
                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-semibold"></label>
                    <input type="text" asp-for="Title" class="form-control" placeholder="Proje Başlığını Düzenle" />
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label fw-semibold"></label>
                    <input type="text" asp-for="ImageUrl" class="form-control" placeholder="Proje Görsel Url Düzenle" />
                    <span class="text-danger" asp-validation-for="ImageUrl"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label fw-semibold">Kategori</label>
                    <select asp-for="CategoryId"  class="form-select" asp-items = "@ViewBag.categories">
                        <option selected disabled>Kategori Seçiniz</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary px-4 fw-semibold">
                        <i class="fa fa-refresh me-1"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
