@model List<ResultChooseDto>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">

        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0 fw-semibold">📋 Seçenekler Listesi</h4>
            <a href="/Admin/Choose/CreateChoose" class="btn btn-light btn-sm fw-semibold">
                <i class="fa fa-plus-circle me-1"></i> Yeni Seçenek Ekle
            </a>
        </div>

        <div class="card-body p-4">
            @if (Model != null && Model.Any())
            {
                <table class="table table-striped table-bordered align-middle text-center">
                    <thead class="table-primary">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Başlık</th>
                            <th scope="col">Açıklama</th>
                            <th scope="col">Seçenekler</th>
                            <th scope="col">Resim</th>
                            <th scope="col" style="width: 200px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>@item.Item1, @item.Item2, @item.Item3</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" class="img-thumbnail" style="max-height: 50px;" />
                                    }
                                </td>
                                <td>
                                    <a href="/Admin/Choose/UpdateChoose/@item.Id" class="btn btn-warning btn-sm me-2">
                                        <i class="fa fa-edit"></i> Güncelle
                                    </a>
                                    <a href="/Admin/Choose/DeleteChoose/@item.Id" class="btn btn-danger btn-sm"
                                       onclick="return confirm('Bu seçeneği silmek istediğinize emin misiniz?');">
                                        <i class="fa fa-trash"></i> Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info text-center" role="alert">
                    📭 Henüz herhangi bir seçenek eklenmemiş.
                </div>
            }
        </div>
    </div>
</div>