@model CreateSocialDto

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-warning text-dark text-center">
            <h4 class="mb-0 fw-semibold">✏️ Yeni Sosyal Medya Oluştur</h4>
        </div>

        <div class="card-body p-4">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold">Ad</label>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Sosyal medya adı" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Icon" class="form-label fw-semibold">Icon</label>
                    <input type="text" asp-for="Icon" class="form-control" placeholder="fa fa-facebook" />
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Url" class="form-label fw-semibold">URL</label>
                    <input type="text" asp-for="Url" class="form-control" placeholder="https://..." />
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary px-4 fw-semibold">
                        <i class="fa fa-plus-circle me-1"></i> Oluştur
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
