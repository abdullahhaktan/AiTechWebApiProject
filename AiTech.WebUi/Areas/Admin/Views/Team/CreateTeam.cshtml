@model CreateTeamDto

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-warning text-dark text-center">
            <h4 class="mb-0 fw-semibold">✏️ Yeni Ekip Üyesi Oluştur</h4>
        </div>

        <div class="card-body p-4">
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="NameSurname" class="form-label fw-semibold">Ad Soyad</label>
                    <input type="text" asp-for="NameSurname" class="form-control" placeholder="Ad Soyad" />
                    <span asp-validation-for="NameSurname" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-semibold">Ünvan</label>
                    <input type="text" asp-for="Title" class="form-control" placeholder="Ünvan" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label fw-semibold">Profil Fotoğrafı</label>
                    <input type="file" asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <hr />

                <div class="mb-3">
                    <label asp-for="FacebookUrl" class="form-label fw-semibold">Facebook</label>
                    <input type="text" asp-for="FacebookUrl" class="form-control" placeholder="Facebook URL" />
                </div>

                <div class="mb-3">
                    <label asp-for="TwitterUrl" class="form-label fw-semibold">Twitter</label>
                    <input type="text" asp-for="TwitterUrl" class="form-control" placeholder="Twitter URL" />
                </div>

                <div class="mb-3">
                    <label asp-for="InstagramUrl" class="form-label fw-semibold">Instagram</label>
                    <input type="text" asp-for="InstagramUrl" class="form-control" placeholder="Instagram URL" />
                </div>

                <div class="mb-3">
                    <label asp-for="LinkedinUrl" class="form-label fw-semibold">LinkedIn</label>
                    <input type="text" asp-for="LinkedinUrl" class="form-control" placeholder="LinkedIn URL" />
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary px-4 fw-semibold">
                        <i class="fa fa-plus-circle me-1"></i> Oluştur
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
