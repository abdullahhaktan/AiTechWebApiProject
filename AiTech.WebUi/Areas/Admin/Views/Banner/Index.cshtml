@model List<ResultBannerDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h3>Projeler</h3>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Durun</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.Image" style="height:75px;width:75px" alt="Alternate Text" />@item.Title</td>
            <td>@item.Description</td>
            <td>@(item.IsActive ? "Aktif" : "Pasif")</td>
            <td>
                <a href="/Admin/Banner/DeleteBanner/@item.Id" class="btn btn-danger">Sil</a>
                <a href="/Admin/Banner/UpdateBanner/@item.Id" class="btn btn-success">Güncelle</a>
                <a href="/Admin/Banner/MakeActive/@item.Id" class="btn btn-success">Aktif Yap</a>
                <a href="/Admin/Banner/MakePassive/@item.Id" class="btn btn-success">Pasif Yap</a>
            </td>
        </tr>
    }

</table>
